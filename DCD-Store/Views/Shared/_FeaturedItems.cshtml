@model Add
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/featuredCard.css" asp-append-version="true" />
</head>
<body>
        <div class="card p-3">

            <div class="d-flex justify-content-between align-items-center ">
                <div class="mt-2">
                    <h4 class="text-uppercase">@Model.Title</h4>
                    <div class="mt-5">
                        <h5 class="text-uppercase mb-0">@Model.City</h5>
                        <h1 class="main-heading mt-0">@Model.Category</h1>
                        <div class="d-flex flex-row user-ratings">
                            <div class="ratings">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="image">
                    <img src="/Uploads/@Model.Id/@Model.PhotoPath" width="200">
                </div>
            </div>


            <p>A great option weather you are at office or at home. </p>

            @*<button class="btn btn-primary">Add to cart</button>*@
        </div>
</body>
</html>


